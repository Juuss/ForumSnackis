@page
@model Snackis.Pages.Admin.ContentManagement.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Ta bort kategori</h1>

<h3>Är du säker på att du vill ta bort denna kategori?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Kategori:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.CategoryName)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Category.Id" />
        <input type="submit" value="Ta bort" class="btn btn-danger" />
        <a asp-page="./Index">Tillbaka</a>
    </form>
</div>
