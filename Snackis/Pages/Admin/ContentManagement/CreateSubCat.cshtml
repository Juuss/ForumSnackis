@page
@model Snackis.Pages.Admin.ContentManagement.CreateSubCatModel

@{
    ViewData["Title"] = "CreateSubCat";
}

<div class="container">
    <h1>Lägg till ny underkategori i @Model.Category.CategoryName</h1>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="SubCategory.SubCatName" class="control-label" >Namn på ny kategori</label>
                    <input asp-for="SubCategory.SubCatName" class="form-control" />
                    <span asp-validation-for="SubCategory.SubCatName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="SubCategory.CategoryID" class="form-control" hidden="hidden" value="@Model.Category.Id" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Skapa" class="btn btn-secondary" />
                </div>
            </form>
            <div>
                <a asp-page="Index">Tillbaka till kategorier</a>
            </div>
        </div>
        <div class="col-sm">
            <h4> Befintliga underkategorier:</h4>
            @if (Model.SubCategories != null)
            {
                @foreach (var subCat in Model.SubCategories)
                {
                    @subCat.SubCatName <br />
                }
            }
        </div>
        <div class="col"></div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
