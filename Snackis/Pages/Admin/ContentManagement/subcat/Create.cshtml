@page
@model Snackis.Pages.Admin.ContentManagement.subcat.CreateModel

@{
    ViewData["Title"] = "Create";
}
@if (Model.Category != null)
{
    <h1>Lägg till ny underkategori i @Model.Category.CategoryName</h1>
}
    <hr />

    <div class="container">
        <div class="row">
            <div class="col-sm">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <input  asp-for="SubCategory.SubCatName" class="form-control" />
                        <span asp-validation-for="SubCategory.SubCatName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="SubCategory.CategoryID" class="form-control" />
                        <span asp-validation-for="SubCategory.CategoryID" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Skapa" class="btn btn-secondary"/>
                    </div>
                </form>
            </div>

            <div class="col-sm">
                <h4> Befintliga underkategorier:</h4>
                @if (Model.SubCategories != null)
                {
                    @foreach (var subCat in Model.SubCategories)
                    {
                        @subCat.SubCatName
                    }
                }
            </div>
            <div class="col"></div>
        </div>
    </div>

    <div>
        <a asp-page="Index" asp-area="ContentManagement">Back to List</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
