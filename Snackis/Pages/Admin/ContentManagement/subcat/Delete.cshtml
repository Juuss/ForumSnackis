@page
@model Snackis.Pages.Admin.ContentManagement.subcat.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Ta bort underkategori</h1>

<h3>Är du säker på att du vill ta bort denna underkategori?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Underkategori:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SubCategory.SubCatName)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="SubCategory.Id" />
        <input type="submit" value="Ta bort" class="btn btn-danger" /> |
        <a asp-page="/Admin/ContentManagement/Details" asp-route-id="@Model.SubCategory.CategoryID">Tillbaka</a>
    </form>
</div>
