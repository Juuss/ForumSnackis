@page
@model Snackis.Pages.Admin.ContentManagement.IndexModel

@{
    ViewData["Title"] = "Index";
}

<div class="text-center"><h1>Kategorier</h1></div>

        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group input-group col-4 offset-md-4">
                <input asp-for="Category.CategoryName" class="form-control" placeholder="Namn på ny kategori:" aria-describedby="button-addon2" />
                <input type="submit" value="Skapa" class="btn btn-outline-secondary" id="button-addon2" />
                <span asp-validation-for="Category.CategoryName" class="text-danger"></span>
            </div>
        </form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Categories[0].Id)

            </th>
            <th>
                Kategori
            </th>
            <th>
                Ta bort
            </th>
            <th>
                Redigera
            </th>
            <th>
                Detaljer
            </th>
            <th>
                Lägg till underkategori
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Categories) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                <a asp-page="./Delete" asp-route-id="@item.Id"><img src="~/img/trash-fill (1).svg" /></a>
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id"><img src="~/img/pencil-square.svg" /></a>
            </td>
            <td>
                <a asp-page="./Details" asp-route-id="@item.Id"><img src="~/img/search.svg" /></a>
            </td>
            <td>
                <a asp-page="./CreateSubCat" asp-route-id="@item.Id"><img src="~/img/plus-square-fill.svg" /></a>
            </td>
        </tr>
}
    </tbody>
</table>
