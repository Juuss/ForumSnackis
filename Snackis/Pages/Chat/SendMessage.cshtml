@page
@model Snackis.Pages.Chat.SendMessageModel

@{
    ViewData["Title"] = "SendMessage";
}

<h1>Skicka meddelande till: @Model.RecipientUserName</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="ChattMessage.SenderId" class="form-control" hidden="hidden" />

                <input asp-for="ChattMessage.RecipientId" class="form-control" hidden="hidden"/>

                <label asp-for="ChattMessage.Message" class="control-label">Meddelande</label>
                <input asp-for="ChattMessage.Message" class="form-control" />
                <span asp-validation-for="ChattMessage.Message" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Skicka" class="btn btn-secondary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Conversation" asp-route-id="@Model.ChattMessage.RecipientId">Tillbaka konversation</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
