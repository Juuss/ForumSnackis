@using Microsoft.AspNetCore.Identity
@using Snackis.Areas.Identity.Data

@inject SignInManager<SnackisUser> SignInManager
@inject UserManager<SnackisUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    { 
            <li class="nav-item"><a href="\Admin">Adminverktyg</a></li>
            <li class="nav-item"><a href="\Admin\ContentManagement\Index">Kategoriöversikt</a></li>
            <li class="nav-item"><a href="\Admin\ContentManagement\Subcat\Index">Underkategoriöversikt</a></li>
            <li class="nav-item"><a href="\Admin\ContentManagement\Posts\Index">Inlägg</a></li>
        <li class="nav-item"><a href="\Index">Kategorier</a></li>
        <li class="nav-item"><a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Inställningar</a></li>
        <li class="nav-item"><p>Inloggad som:  @UserManager.GetUserName(User)</p></li>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item"><a href="\Posts\Overview">Kategorier</a></li>
        <li class="nav-item">
            <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register">Registrera</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">Logga in</a>
        </li>
    }
</ul>
